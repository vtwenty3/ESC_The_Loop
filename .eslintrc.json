{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended"
        // "plugin:@typescript-eslint/recommended"
        // "plugin:react/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        // "@typescript-eslint",
        // "react"
    ],
    "rules": {        
        "indent": ["error", 2],
        "no-unused-vars": "warn",
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        // "react/jsx-filename-extension": [1, { "extensions": [".ts", ".tsx", ".js", ".jsx"] }],
        "no-use-before-define": ["error", { "variables": false }]
        // "react/prop-types": ["error", { "ignore": ["navigation", "navigation.navigate"] }],
        // "import/extensions": [
        //     "error",
        //     "ignorePackages",
        //     {
        //         "js": "never",
        //         "jsx": "never",
        //         "ts": "never",
        //         "tsx": "never"
        //     }
        // ]
    }
}
